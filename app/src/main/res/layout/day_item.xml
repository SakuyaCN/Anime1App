<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:gravity="left"
                                                   android:layout_width="wrap_content"
                                                   android:layout_height="match_parent">
    <com.sakuya.anime1.ui.view.coloredshadow.ShadowImageView
            android:scaleType="centerCrop"
            android:id="@+id/shadow_imag"
            android:layout_width="wrap_content"
            android:layout_height="223dp"
            app:radiusOffset="0.3"
            tools:ignore="MissingConstraints"/>
    <TextView
            android:textColor="@color/white"
            android:textSize="16sp"
            android:text="tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_title"
            app:layout_constraintStart_toStartOf="@+id/shadow_imag" android:layout_marginStart="36dp"
            app:layout_constraintTop_toTopOf="@+id/shadow_imag" android:layout_marginTop="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>