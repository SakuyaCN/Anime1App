<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:gravity="left"
                                                   android:layout_width="wrap_content"
                                                   android:layout_height="wrap_content">
    <com.sakuya.anime1.ui.view.coloredshadow.ShadowImageView
            android:scaleType="centerCrop"
            android:id="@+id/shadow_imag"
            android:layout_width="wrap_content"
            android:layout_height="223dp"
            app:radiusOffset="0.3"
            tools:ignore="MissingConstraints"/>
    <TextView
            android:textColor="@color/white"
            android:textSize="16sp"
            android:text="tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_title"
            app:layout_constraintStart_toStartOf="@+id/shadow_imag" android:layout_marginStart="36dp"
            app:layout_constraintTop_toTopOf="@+id/shadow_imag" android:layout_marginTop="16dp"/>
    <androidx.core.widget.NestedScrollView
            android:paddingLeft="36dp"
            android:paddingRight="36dp"
            android:paddingBottom="26dp"
            android:layout_width="0dp"
            android:layout_height="0dp" app:flexWrap="wrap"
            app:alignItems="flex_start"
            app:alignContent="stretch"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp">
        <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/flex_box"
                app:flexWrap="wrap"
                app:alignItems="flex_start"
                app:alignContent="stretch"/>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>